<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HospitalLeaveApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HospitalLeaveApplication.Views">

    <FlyoutItem Title="Dashboard">
       <Tab>
           <ShellContent ContentTemplate="{DataTemplate local:DashboardPage}" />
       </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Applications">
       <Tab>
           <ShellContent ContentTemplate="{DataTemplate local:LeaveApplicationListPage}"  Route="LeaveApplicationList"/>
       </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Users">
       <Tab>
           <ShellContent ContentTemplate="{DataTemplate local:UserListPage}"  Route="UserList"/>
       </Tab>
    </FlyoutItem>

</Shell>