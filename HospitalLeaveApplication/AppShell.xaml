<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HospitalLeaveApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HospitalLeaveApplication.Views">

    <FlyoutItem Title="Dashboard">
       <Tab>
           <ShellContent ContentTemplate="{DataTemplate local:DashboardPage}" />
       </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Notifications">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:NotificationListPage}"  Route="NotificationListPage"/>
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Leave History">
       <Tab>
           <ShellContent ContentTemplate="{DataTemplate local:LeaveApplicationListPage}"  Route="LeaveApplicationListPage"/>
       </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Take Leave">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:LeaveApplicationPage}"  Route="LeaveApplicationPage"/>
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Users">
       <Tab>
           <ShellContent ContentTemplate="{DataTemplate local:UserListPage}"  Route="UserList"/>
       </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Login">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate local:LoginPage}"  Route="LoginPage"/>
        </Tab>
    </FlyoutItem>

</Shell>