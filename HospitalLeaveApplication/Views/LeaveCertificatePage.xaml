<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HospitalLeaveApplication.Views.LeaveCertificatePage"
             xmlns:viewmodel="clr-namespace:HospitalLeaveApplication.ViewModels"
             x:DataType="viewmodel:LeaveCertificateViewModel"
             Title="LeaveCertificatePage">
    <ContentPage.BindingContext>
        <viewmodel:LeaveCertificateViewModel />
    </ContentPage.BindingContext>
    <Frame Style="{StaticResource FullFrame}" Margin="20, 100" Padding="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Label Margin="0, 10" Text="{Binding Template}" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Start" VerticalOptions="StartAndExpand" FontSize="16" />
            </Grid>
            <Grid Grid.Row="1">
                <Button Text="Close" Style="{StaticResource SubmitButton}" VerticalOptions="End" Clicked="Button_Clicked" />
            </Grid>
        </Grid>
    </Frame>
</ContentPage>