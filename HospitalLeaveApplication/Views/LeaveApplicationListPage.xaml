<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HospitalLeaveApplication.Views.LeaveApplicationListPage"
             xmlns:viewmodel="clr-namespace:HospitalLeaveApplication.ViewModels"
             BackgroundImageSource="bg.jpg"
             Title="Leave Application List">
    
    <ContentPage.BindingContext>
        <viewmodel:LeaveApplicationListViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <!--<StackLayout HorizontalOptions="EndAndExpand" Margin="10">
            <Button Margin="0" Padding="5" HeightRequest="30" FontSize="14" FontAttributes="Bold" TextColor="Black" Text="Apply new" Command="{Binding NavigateToNewLeaveApplicationsCommand}"/>
        </StackLayout>-->
        <StackLayout>
            <Frame Padding="10" Margin="10, 10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Label TextColor="Black" Text="From" />
                    </Grid>
                    <Grid Grid.Column="1">
                        <Label TextColor="Black" Text="To" />
                    </Grid>
                    <Grid Grid.Column="2">
                        <Label TextColor="Black" Text="Leave type" />
                    </Grid>
                    <Grid Grid.Column="3">
                        <Label TextColor="Black" Text="Status" />
                    </Grid>
                </Grid>
            </Frame>
            <CollectionView ItemsSource="{Binding LeaveApplicationList}"
                            SelectionMode="Single"
                            EmptyView="No items found"
                            SelectionChanged="CollectionView_SelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="20, 10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <Label Text="{Binding FromDate, StringFormat='{0:dd-MM-yy}'}" />
                            </Grid>
                            <Grid Grid.Column="1">
                                <Label Text="{Binding ToDate, StringFormat='{0:dd-MM-yy}'}" />
                            </Grid>
                            <Grid Grid.Column="2">
                                <Label Text="{Binding LeaveType}" />
                            </Grid>
                            <Grid Grid.Column="3">
                                <Label Text="{Binding Status}" />
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>