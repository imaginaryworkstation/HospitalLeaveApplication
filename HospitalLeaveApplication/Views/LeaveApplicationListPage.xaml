<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HospitalLeaveApplication.Views.LeaveApplicationListPage"
             xmlns:viewmodel="clr-namespace:HospitalLeaveApplication.ViewModels"
             BackgroundColor="White"
             Title="Leave Application List">
    
    <ContentPage.BindingContext>
        <viewmodel:LeaveApplicationListViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <StackLayout>
            <Frame Padding="10" Margin="10, 10" BackgroundColor="LightGrey">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.25*" />
                        <ColumnDefinition Width="0.25*" />
                        <ColumnDefinition Width="0.30*" />
                        <ColumnDefinition Width="0.20*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Label TextColor="Black" Text="From" />
                    </Grid>
                    <Grid Grid.Column="1">
                        <Label TextColor="Black" Text="To" />
                    </Grid>
                    <Grid Grid.Column="2">
                        <Label TextColor="Black" Text="Leave type" />
                    </Grid>
                    <Grid Grid.Column="3">
                        <Label TextColor="Black" Text="Status" />
                    </Grid>
                </Grid>
            </Frame>
            <CollectionView ItemsSource="{Binding LeaveApplicationList}"
                            SelectionMode="Single"
                            EmptyView="No items found"
                            SelectionChanged="CollectionView_SelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="2" Margin="10, 2" CornerRadius="2">
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.25*" />
                                    <ColumnDefinition Width="0.25*" />
                                    <ColumnDefinition Width="0.30*" />
                                    <ColumnDefinition Width="0.20*" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0" BackgroundColor="Transparent" Padding="10" VerticalOptions="CenterAndExpand">
                                    <Label TextColor="Black" Text="{Binding FromDate, StringFormat='{0:dd-MM-yy}'}" FontSize="12"/>
                                </Grid>
                                <Grid Grid.Column="1" BackgroundColor="Transparent" Padding="10" VerticalOptions="CenterAndExpand">
                                    <Label TextColor="Black" Text="{Binding ToDate, StringFormat='{0:dd-MM-yy}'}"  FontSize="12"/>
                                </Grid>
                                <Grid Grid.Column="2" BackgroundColor="Transparent" Padding="10" VerticalOptions="CenterAndExpand">
                                    <Label TextColor="Black" Text="{Binding LeaveType}"  FontSize="12"/>
                                </Grid>
                                <Grid Grid.Column="3" BackgroundColor="Transparent" Padding="10" VerticalOptions="CenterAndExpand">
                                    <Label TextColor="Black" Text="{Binding Status}"  FontSize="12"/>
                                </Grid>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>