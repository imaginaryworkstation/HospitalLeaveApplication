<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HospitalLeaveApplication.Views.LeaveApplicationListPage"
             xmlns:viewmodel="clr-namespace:HospitalLeaveApplication.ViewModels"
             Title="Leave Application List">
    
    <ContentPage.BindingContext>
        <viewmodel:LeaveApplicationListViewModel/>
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <StackLayout HorizontalOptions="EndAndExpand" Margin="10">
            <Button Margin="0" Padding="5" HeightRequest="30" FontSize="14" FontAttributes="Bold" TextColor="Black" Text="Apply new" Clicked="LeaveButton_Clicked"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>